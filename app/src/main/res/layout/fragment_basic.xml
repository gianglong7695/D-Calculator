<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="horizontal"
    android:padding="@dimen/default_space"
    tools:context="dragon.app.calculator.fragments.BasicFragment">

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/default_space"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_setting"
            style="@style/Default_img"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/default_space"
            android:layout_rowWeight="1"
            android:src="@drawable/ic_setting_white" />

        <TextView
            android:id="@+id/tv_percent"
            style="@style/Default_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/default_space"
            android:layout_rowWeight="1"
            android:text="@string/percent" />

        <TextView
            android:id="@+id/tv_7"
            style="@style/Default_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/default_space"
            android:layout_rowWeight="1"
            android:text="@string/seven" />


        <TextView
            android:id="@+id/tv_4"
            style="@style/Default_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/default_space"
            android:layout_rowWeight="1"
            android:text="@string/four" />

        <TextView
            android:id="@+id/tv_1"
            style="@style/Default_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/default_space"
            android:layout_rowWeight="1"
            android:text="@string/one" />

        <TextView
            android:id="@+id/tv_plus_minus"
            style="@style/Default_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:text="@string/plus_minus" />


    </GridLayout>

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/default_space"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_backspace"
            style="@style/Default_img"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/default_space"
            android:layout_rowWeight="1"
            android:src="@drawable/ic_back_white" />

        <TextView
            android:id="@+id/tv_parenthesis_1"
            style="@style/Default_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/default_space"
            android:layout_rowWeight="1"
            android:text="@string/parenthesis_1" />

        <TextView
            android:id="@+id/tv_8"
            style="@style/Default_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/default_space"
            android:layout_rowWeight="1"
            android:text="@string/eight" />


        <TextView
            android:id="@+id/tv_5"
            style="@style/Default_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/default_space"
            android:layout_rowWeight="1"
            android:text="@string/five" />

        <TextView
            android:id="@+id/tv_2"
            style="@style/Default_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/default_space"
            android:layout_rowWeight="1"
            android:text="@string/two" />

        <TextView
            android:id="@+id/tv_0"
            style="@style/Default_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:text="@string/zero" />


    </GridLayout>

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/default_space"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_clear"
            style="@style/Default_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/default_space"
            android:layout_rowWeight="1"
            android:text="@string/clear" />

        <TextView
            android:id="@+id/tv_parenthesis_2"
            style="@style/Default_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/default_space"
            android:layout_rowWeight="1"
            android:text="@string/parenthesis_2" />

        <TextView
            android:id="@+id/tv_9"
            style="@style/Default_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/default_space"
            android:layout_rowWeight="1"
            android:text="@string/nine" />


        <TextView
            android:id="@+id/tv_6"
            style="@style/Default_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/default_space"
            android:layout_rowWeight="1"
            android:text="@string/six" />

        <TextView
            android:id="@+id/tv_3"
            style="@style/Default_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/default_space"
            android:layout_rowWeight="1"
            android:text="@string/three" />

        <TextView
            android:id="@+id/tv_comma"
            style="@style/Default_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:text="@string/comma" />


    </GridLayout>

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/default_space"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_div"
            style="@style/Default_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/default_space"
            android:layout_rowWeight="1"
            android:text="@string/div" />

        <TextView
            android:id="@+id/tv_mul"
            style="@style/Default_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/default_space"
            android:layout_rowWeight="1"
            android:text="@string/mul" />

        <TextView
            android:id="@+id/tv_sub"
            style="@style/Default_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/default_space"
            android:layout_rowWeight="1"
            android:text="@string/sub" />


        <TextView
            android:id="@+id/tv_add"
            style="@style/Default_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/default_space"
            android:layout_rowWeight="1"
            android:text="@string/add" />

        <TextView
            android:id="@+id/tv_equal"
            style="@style/Default_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_rowWeight="2.075"
            android:paddingBottom="5dp"
            android:text="@string/equal" />

    </GridLayout>

</LinearLayout>
